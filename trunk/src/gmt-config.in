CONFIG_LIBS="-L/sw/lib -lgmt"
CONFIG_DEP_LIBS=" -L/sw/opt/netcdf7/lib -lnetcdf"
CONFIG_PREFIX="/sw"
CONFIG_CFLAGS="-I/sw/include/gmt"
CONFIG_DATA="/sw/share/gmt"
CONFIG_VERSION="5.0.0"
CONFIG_BITS="64"
CONFIG_GDAL_ENABLED=yes
usage()
{
	cat <<EOF
Usage: gmt-config [OPTIONS]
Options:
	[--prefix]
	[--libs]
	[--dep-libs]
	[--cflags]
	[--datadir]
	[--version]
	[--gdal-enabled]
	[--formats]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

case $1 in 
  --libs)
    echo $CONFIG_LIBS
    ;;

  --dep-libs)
    echo $CONFIG_DEP_LIBS
    ;;

  --cflags)
    echo $CONFIG_CFLAGS
    ;;

  --datadir)
    echo $CONFIG_DATA
    ;;

  --prefix)
    echo $CONFIG_PREFIX
    ;;

  --version)
    echo $CONFIG_VERSION
    ;;

  --gdal-enabled)
    echo $CONFIG_GDAL_ENABLED
    ;;

  *)
    usage 1 1>&2
    ;;

esac
