CONFIG_LIBS="-L@CMAKE_INSTALL_PREFIX@/@GMT_LIBDIR@ -lgmt"
CONFIG_DEP_LIBS="@NETCDF_LIBRARY@"
CONFIG_PREFIX="@CMAKE_INSTALL_PREFIX@"
CONFIG_CFLAGS="-I@CMAKE_INSTALL_PREFIX@/include -I@NETCDF_INCLUDE_DIR@"
CONFIG_DATA="@CMAKE_INSTALL_PREFIX@/@GMT_SHARE_PATH@"
CONFIG_VERSION="@GMT_PACKAGE_VERSION@"
CONFIG_GSHHG="@GSHHG_PATH@"
SIZEOF_VOID_P=@CMAKE_SIZEOF_VOID_P@

if [ ! "X@GDAL_INCLUDE_DIR@" = "X" ]; then
	CONFIG_GDAL_ENABLED=yes
	CONFIG_CFLAGS="$CONFIG_CFLAGS -I@GDAL_INCLUDE_DIR@"
	CONFIG_DEP_LIBS="@GDAL_LIBRARY@ $CONFIG_DEP_LIBS"
else
	CONFIG_GDAL_ENABLED=no
fi

if [ ! "X@PCRE_LIBRARY@" = "X" ]; then
	CONFIG_DEP_LIBS="@PCRE_LIBRARY@ $CONFIG_DEP_LIBS"
elif [ ! "X@REGEX_LIBRARY@" = "X" ]; then
	CONFIG_DEP_LIBS="@REGEX_LIBRARY@ $CONFIG_DEP_LIBS"
fi

if [ "$SIZEOF_VOID_P" -eq 8 ]; then
	CONFIG_BITS=64
else
	CONFIG_BITS=32
fi

usage()
{
	cat <<EOF
Usage: gmt-config [OPTIONS]
Options:
	[--bits]
	[--prefix]
	[--libs]
	[--dep-libs]
	[--cflags]
	[--datadir]
	[--gshhg]
	[--version]
	[--gdal-enabled]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

case $1 in
  --bits)
    echo $CONFIG_BITS
    ;;

  --libs)
    echo $CONFIG_LIBS
    ;;

  --dep-libs)
    echo $CONFIG_DEP_LIBS
    ;;

  --cflags)
    echo $CONFIG_CFLAGS
    ;;

  --datadir)
    echo $CONFIG_DATA
    ;;

  --gshhg)
    echo $CONFIG_GSHHG
    ;;

  --prefix)
    echo $CONFIG_PREFIX
    ;;

  --version)
    echo $CONFIG_VERSION
    ;;

  --gdal-enabled)
    echo $CONFIG_GDAL_ENABLED
    ;;

  *)
    usage 1 1>&2
    ;;

esac
